{
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": ".",
    "declaration": true,
    "composite": true,
    "incremental": true,
    "module": "commonjs",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "target": "ES2020"
  },
  "include": ["*.ts"],
  "exclude": ["dist", "node_modules"]
}
